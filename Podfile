platform :ios, '10.0'

target 'Diagnostic' do
  use_frameworks!

  # Pods for Diagnostic
  pod 'SwiftLint'
  pod 'SwiftMessages'
  pod 'FTLinearActivityIndicator', '~> 1.1.2'
  pod 'ReachabilitySwift', '~> 4.3.0'
  pod 'RxSwift', '~> 4.4.0'

  target 'DiagnosticTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'DiagnosticUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'RMCore' do
  use_frameworks!

  # Pods for RMCore
  pod 'FTLinearActivityIndicator', '~> 1.1.2'
  pod 'ReachabilitySwift', '~> 4.3.0'

  target 'RMCoreTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'RMUI' do
  use_frameworks!

  # Pods for RMUI
  pod 'RxSwift', '~> 4.4.0'

  target 'RMUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
